<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/testQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/testReponse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réponse 1" />

    <TextView
        android:id="@+id/testReponse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réponse 2" />

    <TextView
        android:id="@+id/testReponse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réponse 3" />

    <TextView
        android:id="@+id/testReponse4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Réponse 4" />

</LinearLayout>